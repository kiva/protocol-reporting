{
  "name": "reporting",
  "version": "1.0.0",
  "private": false,
  "description": "Reporting service for Kiva Protocol",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol-reporting.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "rimraf dist && tsc && node -r dotenv/config dist/main.js",
    "start:debug": "nodemon --legacy-watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit",
    "test:local": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand -- local",
    "test:integration": "NODE_ENV=LOCAL node -r dotenv/config node_modules/.bin/jest --runInBand -- integration",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "typeorm:migration": "node --require ts-node/register ./node_modules/typeorm/cli.js migration:create -d src/db/migration -n"
  },
  "dependencies": {
    "@apollo/gateway": "^0.42.3",
    "@nestjs-query/core": "^0.30.0",
    "@nestjs-query/query-graphql": "^0.30.0",
    "@nestjs-query/query-typeorm": "^0.30.0",
    "@nestjs/common": "^8.1.2",
    "@nestjs/core": "^8.1.0",
    "@nestjs/graphql": "^9.1.1",
    "@nestjs/platform-express": "^8.1.0",
    "@nestjs/swagger": "^5.1.0",
    "@nestjs/typeorm": "^8.0.2",
    "@types/graphql": "^14.5.0",
    "apollo-server-core": "^3.4.0",
    "apollo-server-express": "^3.4.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "crypto-js": "^4.0.0",
    "dataloader": "^2.0.0",
    "express-jwt": "^6.0.0",
    "graphql": "^15.6.1",
    "graphql-subscriptions": "^1.2.1",
    "jwks-rsa": "^2.0.0",
    "opentracing": "^0.14.5",
    "pg": "^8.7.1",
    "protocol-common": "^0.1.49",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6",
    "ts-morph": "^12.0.0",
    "typeorm": "^0.2.38",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.1.0",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.10",
    "dotenv": "^10.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.3.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node -r dotenv/config dist/main.js"
  }
}
