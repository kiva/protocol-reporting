{
  "name": "reporting",
  "version": "1.0.0",
  "private": false,
  "description": "Reporting service for Kiva Protocol",
  "license": "Apache-2.0",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiva/protocol.git"
  },
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "rimraf dist && tsc && node -r dotenv/config dist/main.js",
    "start:debug": "nodemon --legacy-watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix",
    "test": "node -r dotenv/config node_modules/.bin/jest --runInBand  --forceExit"
  },
  "dependencies": {
    "@nestjs/common": "^8.1.0",
    "@nestjs/core": "^8.1.0",
    "@nestjs/platform-express": "^8.1.0",
    "@nestjs/swagger": "^5.1.0",
    "class-validator": "^0.13.1",
    "crypto-js": "^4.0.0",
    "express-jwt": "^6.0.0",
    "jwks-rsa": "^2.0.0",
    "opentracing": "^0.14.5",
    "protocol-common": "^0.1.48",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@nestjs/testing": "^8.1.0",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.10",
    "dotenv": "^10.0.0",
    "jest": "^27.2.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "tslint": "^6.1.3"
  },
  "jest": {
    "globals": {
      "factories": {}
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "test",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "tsc && node -r dotenv/config dist/main.js"
  }
}
